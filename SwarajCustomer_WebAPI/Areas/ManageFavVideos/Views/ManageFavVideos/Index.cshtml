                        <button class="btn btn-success yes" id="btn_save" onclick=" return SaveManageFavVideos();">Submit</button>
                        <button class="btn btn-danger No" data-dismiss="modal" id="btnlogoutno" onclick=" return ClearFields();">Cancel</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    
