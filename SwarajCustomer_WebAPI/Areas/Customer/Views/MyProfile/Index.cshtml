
@model SwarajCustomer_Common.ViewModel.M_ManageUserDetails
@using SwarajCustomer_Common;
@{
    ViewBag.Title = "Index";
    ViewBag.Menu = "Index";
    ViewBag.SubMenu = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    var Server_Url = CommonMethods.BaseUrl;

}
<div class="col-sm-9 rightbox">
    <div class="fullwidth top">
        <div class="fulltextwidth">
            <h1 class="col-sm-12 headingbox" style="position: relative; top: 0;">My Profile</h1>

            <div class="dl-horizontal">
                @Html.HiddenFor(model => model.adm_user_id)
                @Html.HiddenFor(model => model.user_details_id)
                @Html.HiddenFor(model => model.mst_state_id)
                @Html.HiddenFor(model => model.mst_district_id)
                @Html.HiddenFor(model => model.birthday_email_sent)

                <div class="col-sm-3 leftimage">
                    <span class="images">
                        <img src="@Model.ImageName" data-action="zoom">
                    </span>
                </div>
                <div class="col-sm-9 righttext">

                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>User Name</label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.username)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Mobile Number</label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.mob_number)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Email </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.email)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>User Type </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.user_type)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Description </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.description)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Referal Code </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.referal_code)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Status </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.is_active)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>First Name </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.first_name)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Last Name </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.last_name)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>WhatsApp No </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.whatsapp_no)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Address </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.address)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>City </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.city)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>District </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.district)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>State </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.state)
                        </span>
                    </div>


                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Date of Birth </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.DOB)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Time of Birth </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.TOB)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Place of Birth </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.PlaceOfBirth)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Landmark </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.landmark)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Marital Status </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.marital_status)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Adhar Card Number </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.aadhar_number_name)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Qualification </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.qualification)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Health  Status </label>
                        </span>
                        <span class="usernumber">
                            @Html.DisplayFor(model => model.health_status)
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <span class="userheading">
                            <label>Role Name </label>
                        </span>
                        <span class="usernumber">
                            @Html.Raw(string.Join("  |  ", Model.ManageUserRoles.Select(s => string.Format("<span>{0}</span>", s.role_name))))
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <p class="backlink">
            <a href="~/Customer/MyProfile/Edit?user_id=@Model.adm_user_id" title="Edit"> Edit Profile </a>
        </p>
    </div>
</div>
